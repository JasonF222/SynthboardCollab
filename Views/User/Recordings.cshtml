@model List<SoundFile>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recordings</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Calligraffitti&family=Permanent+Marker&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/recordingstyle.css">
</head>
<body>

    <div class="topContainer d-flex">

        <div class="headerContainer d-flex justify-content-center">
            <h1 class="text-center">Mr Synth</h1>
            <h3 class="text-center currentBoard">Recordings</h3>
        </div>

        <div class="dashlogbtns">
            <p><a asp-controller="User" asp-action="Dashboard" class="dashlogbtns me-2 dashbtn">Dashboard</a></p>
            <p><a asp-controller="User" asp-action="Logout" class="dashlogbtns me-2 logbtn">Logout</a></p>
        </div>
    </div>
<h4 class="text-center">@ViewBag.Limit</h4>
<div class="recordingCont">
    @{
        @if(Model.Count > 0)
        {
            @foreach (var one in Model)
            {
                <p class="recordingLinksText">View :<a asp-action="PlayRecording" asp-controller="User" asp-route-id="@one.SoundFileID" class="recordingLinks ms-3"> @one.Name</a></p>
            }
        }
    }
</div>

<script src="~/js/recordingscript.js"></script>
</body>
</html>