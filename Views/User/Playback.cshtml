@model SoundFile
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Playback</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Calligraffitti&family=Permanent+Marker&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/playbackstyle.css">
    
</head>
<body>
    <div class="topContainer d-flex">

        <div class="headerContainer d-flex justify-content-center">
            <h1 class="text-center">Mr Synth</h1>
            <h3 class="text-center currentBoard">Playback</h3>
        </div>

        <div class="dashlogbtns">
            <p><a asp-controller="User" asp-action="Dashboard" class="dashlogbtns me-2 dashbtn">Dashboard</a></p>
            <p><a asp-controller="User" asp-action="Logout" class="dashlogbtns me-2 logbtn">Logout</a></p>
        </div>
    </div>


<div id="PlayBackArray">@Model.KeyPath</div>
<div id="BoardType">@Model.BoardType</div>


<div class="myRecording">
        <h4><a asp-action="Recordings" asp-controller="User" class="mt-3 myRecordingText">My Recordings</a></h4>
    </div>
<h1 class="text-center boardSelectHead">Change Board Type</h1>
    <div class="boardSelectButtonContainer d-flex gap-5 mt-5">
        <p onclick="selectStyle('triangle')" class="boardChangeBtn btnClassic">Classic</p>
        <p onclick="selectStyle('sawtooth')" class="boardChangeBtn btnFire">Fire</p>
        <p onclick="selectStyle('sine')" class="boardChangeBtn btnWater">Water</p>
        <p onclick="selectStyle('square')" class="boardChangeBtn btnSpace">Space</p>
    </div>
    <div class="playButton">
        <p onclick="playBack(timeLine)" class="btnPlay">Play</p>
    </div>
    <div class="deleteButton">
        <p><a asp-action="DeleteRecording" asp-controller="User" asp-route-id="@Model.SoundFileID" class="btnDelete">Delete</a></p>
    </div>

<script src="~/js/playbackscript.js"></script>
</body>
