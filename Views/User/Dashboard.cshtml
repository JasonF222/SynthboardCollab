@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Calligraffitti&family=Permanent+Marker&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dashboard.css">
    
</head>
<body>
    <div class="navhead text-center">
        <h1 class="welcome">Welcome @Model.UserName</h1>
        <p class="logoutbtn"><a asp-controller="User" asp-action="Logout" class="buttonstyle">Logout</a></p>
    </div>

    <div class="rain-div">

    </div>
    <div class="myRecording">
        <h4><a href="/user/recordings" class="mt-3 myRecordingText">My Recordings</a></h4>
    </div>
    <div class="selectBoard">
        <h1 class="selectHeader">Select a Board</h1>
    </div>
    <div class="boardContainer">
        <div class="board boardClassic">
            <p><a asp-controller="Board" asp-action="Classic"class="select-board-text-classic">Classic</a></p>
        </div>
        <div class=" board boardFireStyle">
            <p><a asp-controller="Board" asp-action="Fire" class="select-board-text-fire">Fire</a></p>
        </div>
        <div class=" board boardWaterStyle">
            <p><a asp-controller="Board" asp-action="Water" class="select-board-text-water">Water</a></p>
        </div>
        <div class=" board boardSpaceStyle">
            <p><a asp-controller="Board" asp-action="Space" class="select-board-text-space">Space</a></p>
        </div>
    </div>
    <script src="~/js/dashboardscript.js"></script>
</body>
</html>